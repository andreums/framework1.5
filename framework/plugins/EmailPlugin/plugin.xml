<?xml version="1.0" encoding="UTF-8"?>
<plugin>	
	<name>Email Plugin</name>
	<class>EmailPlugin</class>
	<version>0.1</version>
	<description>
		Facilities to send email
	</description>
	<status>enabled</status>
	
	<options>
		<option name="mailMethod">
			<value>smtp</value>
		</option>
		<option name="from">
			<value>usuario@correo.dominio|Nombre</value>
		</option>		
		<option name="smtpHost">
			<value>smtp.xxxxx</value>
		</option>
		<option name="smtpPort">
			<value>25</value>
		</option>		
		<option name="smtpSecurity">
			<value></value>
		</option>
		<option name="enableSMTPAuthentication">
			<value>true</value>
		</option>		
		<option name="smtpUsername">
			<value>usuario@correo.es</value>
		</option>		
		<option name="smtpPassword">
			<value>password</value>
		</option>		
	</options>
					
	<files>
		<file name="plugin.php" />		
	</files>
	
	<jsFiles>
				
	</jsFiles>
	
</plugin>
